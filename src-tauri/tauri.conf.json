{
  "productName": "Editrion (Beta)",
  "version": "1.0.0",
  "identifier": "com.editrion.editor",
  "build": {
    "beforeBuildCommand": "npm run ensure:icons && npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Editrion - Text editor (Beta)",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main capability for TaurEd",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:event:default",
            "core:event:allow-listen", 
            "core:event:allow-emit",
            "dialog:default",
            "dialog:allow-open",
            "dialog:allow-save"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/1024x1024.png"
    ]
  },
  "plugins": {}
}
